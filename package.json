{
  "name": "elixir-chess-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --prefix client",
    "dev:server": "npm run dev --prefix server",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "build:shared": "npm run build --prefix shared",
    "build:client": "npm run build --prefix client",
    "build:server": "npm run build --prefix server",
    "install:all": "npm install --prefix shared && npm install --prefix client && npm install --prefix server",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
